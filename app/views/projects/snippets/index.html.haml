- page_title "代码段"

- if current_user
  .top-area
    - include_private = @project.team.member?(current_user) || current_user.admin?
    = render partial: 'snippets/snippets_scope_menu', locals: { subject: @project, include_private: include_private }

    .nav-controls.hidden-xs
      - if can?(current_user, :create_project_snippet, @project)
        = link_to new_namespace_project_snippet_path(@project.namespace, @project), class: "btn btn-new", title: "新代码段" do
          新代码段

- if can?(current_user, :create_project_snippet, @project)
  .visible-xs
    &nbsp;
    = link_to new_namespace_project_snippet_path(@project.namespace, @project), class: "btn btn-new btn-block", title: "新代码段" do
      新代码段

= render 'snippets/snippets'
