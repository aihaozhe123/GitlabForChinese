- @no_container = true
- page_title "#{@build.name} (##{@build.id})", "工作"
- trace_with_state = @build.trace_with_state
= render "projects/pipelines/head", build_subnav: true

%div{ class: container_class }
  .build-page
    = render "header"

    - if @build.stuck?
      - unless @build.any_runners_online?
        .bs-callout.bs-callout-warning
          %p
            - if no_runners_for_project?(@build.project)
              此工作被卡住，因为没有 Runner 指定给该项目。
            - elsif @build.tags.any?
              此工作被卡住，因为没有指定标签的 Runner 指定给该项目。指定的标签如下：
              - @build.tags.each do |tag|
                %span.label.label-primary
                  = tag
            - else
              此工作被卡住，因为没有可用的 Runner 来运行此构建。

            %br
            转到
            = link_to namespace_project_runners_path(@build.project.namespace, @build.project) do
              Runners 页面

    - if @build.starts_environment?
      .prepend-top-default
        .environment-information
          - if @build.outdated_deployment?
            = ci_icon_for_status('success_with_warnings')
          - else
            = ci_icon_for_status(@build.status)

          - environment = environment_for_build(@build.project, @build)
          - if @build.success? && @build.last_deployment.present?
            - if @build.last_deployment.last?
              此工作是对 #{environment_link_for_build(@build.project, @build)}的最近部署。
            - else
              此工作是对 #{environment_link_for_build(@build.project, @build)}的过期部署。
              查看最近 #{deployment_link(environment.last_deployment)}的部署。
          - elsif @build.complete? && !@build.success?
            将此工作部署到 #{environment_link_for_build(@build.project, @build)}未成功。
          - else
            此工作正在创建一个部署到 #{environment_link_for_build(@build.project, @build)}
            - if environment.try(:last_deployment)
              并将覆盖的
              = link_to '最新部署', deployment_link(environment.last_deployment)

    .prepend-top-default
      - if @build.erased?
        .erased.alert.alert-warning
          - if @build.erased_by_user?
            工作已被 #{link_to(@build.erased_by_name, user_path(@build.erased_by))} 在 #{time_ago_with_tooltip(@build.erased_at)} 删除
          - else
            工作已被删除 #{time_ago_with_tooltip(@build.erased_at)}
      - else
        #js-build-scroll.scroll-controls
          .scroll-step
            %a.scroll-link.scroll-top{ href: '#up-build-trace', id: 'scroll-top', title: '滚动到顶部' }
              = custom_icon('scroll_up')
              = custom_icon('scroll_up_hover_active')
            %a.scroll-link.scroll-bottom{ href: '#down-build-trace', id: 'scroll-bottom', title: '滚动到底部' }
              = custom_icon('scroll_down')
              = custom_icon('scroll_down_hover_active')
          - if @build.active?
            .autoscroll-container
              %span.status-message#autoscroll-status{ data: { state: 'disabled' } }
                %span.status-text 启用自动滚动
                %i.status-icon
                  = custom_icon('scroll_down_hover_active')
        #up-build-trace
        %pre.build-trace#build-trace
          %code.bash.js-build-output
          .build-loader-animation.js-build-refresh

        #down-build-trace

  = render "sidebar"

.js-build-options{ data: javascript_build_options }
