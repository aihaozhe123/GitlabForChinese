= render 'devise/shared/tab_single', tab_title: '登录预览'
.login-box
  %form.gl-show-field-errors
    .form-group
      = label_tag :login
      = text_field_tag :login, nil, class: "form-control top", title: '请提供您的用户名或电子邮件地址。'
    .form-group
      = label_tag :password
      = password_field_tag :password, nil, class: "form-control bottom", title: '这是必填项。'
    .form-group
      = button_tag "登录", class: "btn-create btn"

