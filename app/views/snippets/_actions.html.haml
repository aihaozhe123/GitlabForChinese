- return unless current_user

.hidden-xs
  - if can?(current_user, :update_personal_snippet, @snippet)
    = link_to edit_snippet_path(@snippet), class: "btn btn-grouped" do
      修改
  - if can?(current_user, :admin_personal_snippet, @snippet)
    = link_to snippet_path(@snippet), method: :delete, data: { confirm: "您确定继续么？" }, class: "btn btn-grouped btn-inverted btn-remove", title: '删除代码段' do
      删除
  = link_to new_snippet_path, class: "btn btn-grouped btn-inverted btn-create", title: "新代码段" do
    新代码段
  - if @snippet.submittable_as_spam_by?(current_user)
    = link_to '提交为垃圾邮件', mark_as_spam_snippet_path(@snippet), method: :post, class: 'btn btn-grouped btn-spam', title: '提交为垃圾邮件'
.visible-xs-block.dropdown
  %button.btn.btn-default.btn-block.append-bottom-0.prepend-top-5{ data: { toggle: "dropdown" } }
    操作
    = icon('caret-down')
  .dropdown-menu.dropdown-menu-full-width
    %ul
      %li
        = link_to new_snippet_path, title: "新代码段" do
          新代码段
      - if can?(current_user, :admin_personal_snippet, @snippet)
        %li
          = link_to snippet_path(@snippet), method: :delete, data: { confirm: "确定要继续么？" }, title: '删除代码段' do
            删除
      - if can?(current_user, :update_personal_snippet, @snippet)
        %li
          = link_to edit_snippet_path(@snippet) do
            编辑
      - if @snippet.submittable_as_spam_by?(current_user)
        %li
          = link_to '提交为垃圾邮件', mark_as_spam_snippet_path(@snippet), method: :post
